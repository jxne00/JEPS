<form asp-controller="Account"
      asp-action="SendBirthdayEmail"
      method="post">

    <br />
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <h2><b>Email promotion code</b></h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="User_fullname">Customer's name :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter Customer's Name" name="User_fullname" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="UserEmail">Email :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter Customer's Email" name="UserEmail" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="Subject">Subject :</label>
        <div class="col-sm-4">
            <input type="text" value="Birthday code" name="Subject" class="form-control" readonly/>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Send Email" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }

</form>