<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Continue online orders</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div style="color:darkred;">
        Note: By clicking proceed, customer login will be enabled.
    </div>

    <div class="container">
        <form method="post" action="/Account/ContinueLoginPost">
            <div style="text-align:center">
                <br />
                <h3><b>Continue accepting online orders</b></h3>
            </div>
            <div class="form-group row">
                <input type="text" id="StopLogin" name="StopLogin" class="form-control" hidden />
            </div>

            <div style="text-align:center">
                <input type="submit" value="Proceed" class="btn btn-default"
                       onclick='return confirm("Are you sure you want to continue accepting online orders?")' />
            </div>

            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-5">
                        <div class="alert alert-@ViewData["MsgType"]">
                            @ViewData["Message"]
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>

</body>
</html>
