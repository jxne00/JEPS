@model CustomerDetails

    <form asp-controller="Account"
          asp-action="CustDetails"
          method="post">
        <br />

        <div class="form-group row">
            <div class="col-sm-6">
                <h2><b>Please Enter Personal Details</b></h2>
            </div>
        </div>

        <!--Customer_id auto generated by database-->

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="CustomerNo">Phone Number :</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter your Phone Number" asp-for="CustomerNo" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="CustomerNo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Date_of_birth">Birthdate :</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter birthdate in YYYY-MM-DD format" asp-for="Date_of_birth" asp-format="{0:yyyy-MM-dd}" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Date_of_birth" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Customer_Address">Address :</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter your Address" asp-for="Customer_Address" class="form-control" />
            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Customer_Address" class="text-danger"></span>
            </div>
        </div>

        <!--To hide the userid textbox as it is auto filled FOREIGN KEY (same value as Userid in User table)-->
        <input asp-for="UserEmail" hidden />

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <input type="submit" value="Complete Registration" class="btn btn-info" />
            </div>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row" style="">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        }

    </form>

