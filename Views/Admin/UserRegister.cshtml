@model VisitorRegistration

<form asp-controller="Admin"
      asp-action="UserRegister"
      method="post">


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <br><h2><b>Create User</b></h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="UserEmail">User Email :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter your User Email" asp-for="UserEmail" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_fullname">Full Name :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter your Fullname" asp-for="User_fullname" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="User_fullname" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_Password">Password :</label>
        <div class="col-sm-4">
            <input type="password" placeholder="Enter your Password" asp-for="User_Password" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="User_Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_Password2">Re-enter Password :</label>
        <div class="col-sm-4">
            <input type="password" placeholder="Re-enter your Password to confirm" asp-for="User_Password2" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="User_Password2" class="text-danger"></span>
        </div>
    </div>


    <!--PLEASE DO CHECKBOX FOR USER TYPE (PAVITHRA PLS RMB)-->

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="User_type">User Type:</label>
        <div class="col-sm-4">
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="User_type"
                       asp-for="User_type" value="A" />
                <label class="form-check-label" for="admin">A</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="User_type"
                       asp-for="User_type" value="S" />
                <label class="form-check-label" for="staff">S</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" id="User_type"
                       asp-for="User_type" value="C" />
                <label class="form-check-label" for="customer">C</label>
            </div>
        </div>
    </div>

    <!--Status is automatically set to 'Active' in controller-->

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Proceed" class="btn btn-info" />
        </div>
    </div>


    <b><a href="Users">Back to Users List</a></b>


    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

</form>

