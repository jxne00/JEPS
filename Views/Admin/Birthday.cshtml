}
@section MoreScripts {

    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsTblBirth').DataTable({
                ordering: true,
                paging: true,
                searching: true,
                info: true,
                lengthChange: false,
                pageLength: 10
            });
        });
    </script>
}


@model DataRowCollection

<div class="col-sm-12" style="vertical-align:middle; text-align: center;">
    <p><h2><u><b><span style="color:black">Birthday Discount</span></b></u></h2></p>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<div>

    @{
        // TODO: L11 Task 5a - Give the Table an ID to be used with DataTables
    }
    <table id="jsTblBirth" class="table table-condensed table-hover table-bordered" style="border:double">
        <thead style="text-align:center">

            <tr style="background-color:navajowhite">

                <th scope="col">Customer ID</th>
                <th scope="col">Full Name</th>
                <th scope="col">Birthday Discount Used Date</th>

            </tr>
        </thead>

        <tbody>
            @foreach (DataRow row in Model)
            {
                <tr style="background-color:none">
                    <td style="text-align: center;">@row["Customer_id"]</td>
                    <td style="text-align: center;">@row["User_fullname"]</td>
                    <td style="text-align: center;">
                        @if (row["Birthday_discount_used"] == null)

                        {
                            <b style="color:red">Never use</b>
                        }

                        else
                        {
                            <b style="color:green">@String.Format("{0:dd-MM-yyyy}", row["Birthday_discount_used"])</b>
                        }
                    </td>


                </tr>
            }
        </tbody>


    </table>
    <p>
        <div class="col-sm-9" style="background-color:palegoldenrod;vertical-align:middle; text-align: left;">


            <u><b>TAKE NOTE:</b></u>
<p>
        Birthday discount used date is only indicated for those customers' that have used their birthday discount.
    </p>

</div>
 </p>
