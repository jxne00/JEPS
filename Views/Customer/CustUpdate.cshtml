@model CustomerDetails ;


<form asp-controller="Customer"
      asp-action="CustUpdate"
      method="post">

    <br />
    <div class="form-group row">
        <div class="col-sm-6">
            <h2><b>Update Personal Details</b></h2>
        </div>
    </div>


    <input type="text" asp-for="UserEmail" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CustomerNo">Phone Number :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Phone Number" asp-for="CustomerNo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="CustomerNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Date_of_birth">Birthdate :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Birthdate (YYYY-MM-DD)" asp-for="Date_of_birth" asp-format="{0:yyyy-MM-dd}" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Date_of_birth" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Customer_Address">Address :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Address" asp-for="Customer_Address" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Customer_Address" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <a asp-controller="Customer" asp-action="CustUpdate"
               onclick='return confirm("Are you sure you want to save changes ?")'>
                <input type="submit" value="Save" class="btn btn-primary" />
            </a>
        </div>
    </div>

    <h5><a href="CustIndex">Back</a></h5>



    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@Html.Raw(ViewData["Message"])</text>
                </div>
            </div>
        </div>
    }

</form>

