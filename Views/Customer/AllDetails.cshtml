@using System.Data
@model DataRowCollection

@foreach (DataRow cust in Model)
{

    <br />
        <div class="offset-sm-1 col-sm-4" style="font-family:'Comic Sans MS'">
            <h2>
                @*<img src="~/images/profile.png" width="100" height="100" />*@
                <b><u>ALL DETAILS</u></b>
            </h2>
        </div>
        <br />

        <div style="display:compact;">
            <h5><b>Account Details</b></h5>

            <br />
            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["User_fullname"]">Name :</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="@cust["User_fullname"]" class="form-control" style="background-color:gainsboro" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["User_Password"]">Password :</label>
                <div class="col-sm-4">
                    <input type="text" value="Hidden" class="form-control" style="background-color:gainsboro; color:darkred" readonly />
                </div>
            </div>
            <input type="text" asp-for="@cust["User_Password"]" hidden />

            <h5>
                <a asp-controller="Customer" asp-action="AccountDetail"><input type="button" class="btn btn-basic" value="Edit Account Details" /></a>

            </h5>
            <hr />

            <h5><b>Personal Information</b></h5>
            <br />
            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["UserEmail"]">E-mail :</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="@cust["UserEmail"]" class="form-control" style="background-color:gainsboro" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["CustomerNo"]">Phone Number :</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="@cust["CustomerNo"]" class="form-control" style="background-color:gainsboro" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["Date_of_birth"]">BirthDate :</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="@cust["Date_of_birth"]" asp-format="{0:dd MMM yyyy}" class="form-control" style="background-color:gainsboro" readonly />
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="@cust["Customer_Address"]">Address :</label>
                <div class="col-sm-4">
                    <input type="text" asp-for="@cust["Customer_Address"]" class="form-control" style="background-color:gainsboro" readonly />
                </div>
            </div>

            <h5>
                <a asp-controller="Customer" asp-action="CustIndex"><input type="button" class="btn btn-basic" value="Edit Personal Information" /></a>

            </h5>
            <br />
        </div>
        
}
@if (ViewData["Message"] != null)
{
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@Html.Raw(ViewData["Message"])</text>
            </div>
        </div>
    </div>
}






