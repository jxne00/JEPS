<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">


<head>
    <title>JEPS Food Ordering System</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    @RenderSection("MoreScripts", false)

    <style>

    body { /*background-color: oldlace;*/ 
           background-color: #e09082;
            background-image: linear-gradient(300deg, #e09082 0%, #f8dba4 74%); 
           background-repeat:repeat; background-attachment: fixed; background-size: 100%; }

    
    li a, .dropbtn {
            display: inline-block;
            color: white;
            text-align: center;
        }

            li a:hover, .dropdown:hover .dropbtn {
                background-color: rgba(138, 133, 133, 0.70);
            }

        li.dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .header {
            width: 100%;
        }

    </style>

</head>
<body>
    <img class="header" src="~/images/fypbanner.PNG" />
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("A"))
        {
            @Html.Partial("FoodAdmin")
        }
        else if (User.IsInRole("S"))
        {
            @Html.Partial("FoodStaff")
        }

        else
        {
            @Html.Partial("FoodCustomer")
        }
    }
    else
    {
        @Html.Partial("FoodVisitor")
    }

    <div class="container">
        @RenderBody()
    </div>

    <div>
        &nbsp;
    </div>

    <!--COPYRIGHT FOOTER-->

    <footer class="fixed-bottom" style="background-color:darkgrey">
        <div class="text-light text-center">
            <i class="fa fa-copyright"></i> Copyright JEPS. All rights reserved.
        </div>
    </footer>

</body>
</html>
