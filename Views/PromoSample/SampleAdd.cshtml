@model Promotion
<form asp-controller="PromoSample"
      asp-action="SampleAdd"
      method="post">
    <br />

    <div class="form-group row">
        <div class="col-sm-6">
            <h2><b>Please enter Promotion Details</b></h2>
        </div>
    </div>

    <!--Promotion_discount_id auto generated by database-->
  
    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Promotion_discount_Description">Description :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter your description" asp-for="Promotion_discount_Description" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Promotion_discount_Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Promotion_percentage">Percentage Amount :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter your % amount" asp-for="Promotion_percentage" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Promotion_percentage" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Promotion_start_date">Start Date :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter Start Date in DD-MM-YYYY format" asp-for="Promotion_start_date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Promotion_start_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Promotion_end_date">End Date :</label>
        <div class="col-sm-4">
            <input type="text" placeholder="Enter End Date in DD-MM-YYYY format" asp-for="Promotion_end_date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Promotion_end_date" class="text-danger"></span>
        </div>
    </div>


    <div class="offset-sm-2 col-sm-4">
        <h5>
            @if (User.IsInRole("A"))
            {
                <a asp-controller="PromoSample" asp-action="SampleAdd"><input type="submit" class="btn btn-info fa" value="Create Discount" /></a>

            }
        </h5>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row" style="">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

</form>

