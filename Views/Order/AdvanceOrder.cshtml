    <div class="container">

        <div class="form-group row">
            <div class="col-sm-14" style="vertical-align:middle; text-align:left;">
                <p style="color:red"><strong>Please rectify your delivery details.</strong></p>
            </div>
        </div>

        <input type="text" asp-for="Customer_id" hidden />
        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Customer_id"> Delivery Address :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Customer_Address" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Order_Date">Order Date :</label>
            <div class="col-sm-4 from-control-static">
