            </div>
            <div class="col-sm-3">
                <span asp-validation-for="Order_Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Order_Time">Order Time :</label>
                <div class="col-sm-4 from-control-static">
                    <input type="text" asp-for="Order_Time" placeholder="Enter in 24 hours format" class="form-control" />
                </div>
                <div class="col-sm-3">
                    <span asp-validation-for="Order_Time" class="text-danger"></span>
                </div>
            </div>
