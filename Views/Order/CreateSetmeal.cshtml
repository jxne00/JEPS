        </div>*@

        <br />

        @*<h2><b>@Model.Set_meal_description</b></h2>
        <input type="text" asp-for="Order_detail_id" hidden />*@

        <br />

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Set_meal_id">Meal Name :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Set_meal_description" class="form-control" readonly />
            </div>
        </div>


        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Set_meal_id">Price :</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Set_meal_price" class="form-control" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-sm-2" asp-for="Quantity">Quantity :</label>
            <div class="col-sm-4">
                <select asp-for="Quantity" class="form-control">
                    <option value="">--- SELECT QUANTITY ---</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
            <div class="col-sm-4">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>



        @*<div class="form-group row">
                <label class="control-label col-sm-2" for="Order_detail_id">Quantity : </label>
                <div class="col-sm-4">
                    <input type="text" asp-for="Order_detail_id" class="form-control" readonly />

                   <select class="form-control dropdown" asp-for="Order_detail_id">

                            @foreach (Orderdetail row in ViewData["Quantity"] as List<Orderdetail>)
                            {
                                <option value="@row.Quantity">
                                    @row.Quantity.ToString()
                                </option>
                            }
                        </select>
                </div>
            </div>*@
    </div>
    <div class="offset-sm-4 col-sm-6">
        <h5>
            @if (User.IsInRole("C"))
            {
                <input type="submit" class="btn btn-warning fa" value="Add to cart" />

            }
        </h5>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="alert alert-@ViewData["MsgType"]">
                <text>@ViewData["Message"]</text>
            </div>
        </div>
    }

</form>



