@model SetMeal

<form method="post"
      asp-controller="Menu"
      asp-action="CreateMeal"
      enctype="multipart/form-data">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <br /> <h2><b>Add Set Meal</b></h2>
        </div>
    </div>
    @*<div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <h2>Add Menu Item</h2>
            </div>
        </div>*@

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Set_meal_description">Meal Name :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Set_meal_description" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Set_meal_description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Menu_itemid1">Menu Item 1 ID :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Menu_itemid1" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Menu_itemid1" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Menu_itemid2">Menu Item 2 ID :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Menu_itemid2" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Menu_itemid2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Set_meal_price">Price :</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Set_meal_price" class="form-control" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Set_meal_price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Photo">Photo :</label>
        <div class="col-sm-4">
            <input type="file" asp-for="Photo" class="form-control-file" />
        </div>
        <div class="col-sm-3">
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }

    <a href="/Menu/ListMeal">Back to list of Set Meals</a>

</form>